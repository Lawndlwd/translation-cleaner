{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./src",
    "lib": ["ES2019"],
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["src/**/*"]
}
